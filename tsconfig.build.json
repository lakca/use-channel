{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [ "src" ],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "target": "es2015",
    "noEmit": false,
    "declaration": true,
    "outDir": "dist/modules"
  }
}
